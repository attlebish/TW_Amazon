= form_for @asset do |f|
  -if @asset.errors.any?
    #error_explanation
      %h2= "#{pluralize(@asset.errors.count, "error")} prohibited this asset from being saved:"
      %ul
        - @asset.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :data_file_name
    = f.text_field :data_file_name
  .field
    = f.label :data_content_type
    = f.text_field :data_content_type
  .field
    = f.label :data_file_size
    = f.number_field :data_file_size
  .field
    = f.label :attachable
    = f.text_field :attachable
  .actions
    = f.submit 'Save'
