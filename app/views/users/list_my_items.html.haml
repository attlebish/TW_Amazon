-else
  %table{:class => 'table table-simpleBordered', :id => 'closedBids'}
    %tbody
      - @expired_bids.each do |auction|
        = render :partial => "silent_auctions/expired_auction", :locals => {:auction => auction }

%h4.future Future Auctions
- if @future_bids.empty?
  .empty_collection
    %p.emptyMsg You currently have no item to be put on auction.
-else
  %table{:class => 'table table-simpleBordered', :id => 'closedBids'}
    %tbody
      - @future_bids.each do |auction|
        -#- auction = bid
        = render :partial => "silent_auctions/my_auction", :locals => {:auction => auction }