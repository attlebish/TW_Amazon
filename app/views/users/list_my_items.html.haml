%h1 My Auctions
%h3 Running Auctions
- if @running_bids.empty?
  .empty_collection
    %p.emptyMsg You currently have no item on sale/auction.
-else
  %table{:class => 'table table-simpleBordered', :id => 'currentBids'}
    %tbody
      - @running_bids.each do |bid|
        - auction = bid
        = render :partial => "silent_auctions/my_auction", :locals => {:auction => auction }

%h3 Future Auctions
- if @future_bids.empty?
  .empty_collection
    %p.emptyMsg You currently have no item to be put on sale/auction.
-else
  %table{:class => 'table table-simpleBordered', :id => 'closedBids'}
    %tbody
      - @future_bids.each do |bid|
        - auction = bid
        = render :partial => "silent_auctions/my_auction", :locals => {:auction => auction }