%h1
  %span My Silent Auctions
  = link_to 'Create NEW Auction/Sale', new_silent_auction_path, :class => 'btn btn-primary'
%h4.running Running Auctions
- if @running_bids.empty?
  .empty_collection
    %p.emptyMsg You currently have no item on auction.
-else
  %table{:class => 'table table-simpleBordered', :id => 'currentBids'}
    %tbody
      - @running_bids.each do |auction|
        -#- auction = bid
        = render :partial => "silent_auctions/my_auction", :locals => {:auction => auction }

%h4.closed Closed Auctions
- if @closed_bids.empty?
  .empty_collection
    %p.emptyMsg You currently have no item within closed auction.
-else
  %table{:class => 'table table-simpleBordered', :id => 'closedBids'}
    %tbody
      - @closed_bids.each do |auction|
        -#- auction = bid
        = render :partial => "silent_auctions/my_closed_auction", :locals => {:auction => auction }

%h3 Expired Auctions
- if @expired_bids.empty?
