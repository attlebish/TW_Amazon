- @user = current_user
-#= simple_nested_form_for @user, :html => { :multipart => false } do |f|
  -#= f.input :region, :label => 'Your Region', :collection => [[],["AUS","au"], ["IND","id"]], :selected => @user.region, :onchange => 'alert(@user);'
  -#= submit_tag "Update Your Region and Refresh the Page", :name => "refresh", :id => 'submit_continue', :class => 'btn btn-primary form_action_btn', :disable_with => "Updating region and refreshing the page..."
- @new_user = false;
- if current_user.region == nil
  - @new_user = true
- else 
  - if current_user.region == ""
    - @new_user = true
-#- if current_user.region != nil
- if @new_user == false
  %h1
    %span Future Auctions
    - if current_user.admin?
      = link_to 'Create NEW Auction', new_silent_auction_path, :class => 'btn btn-primary'
  
  -#- status = page_entries_info @future_auctions
  -#- replacements = [ ["silent", "future"], ["entries", "auctions"] ]
  -#- replacements.each {|replacement| status.gsub!(replacement[0], replacement[1])}
  -#%h3= status.html_safe
  - @future_auctions = @future_auctions.where("region = '#{@user.region}'")
  - if @future_auctions.empty?
    - status = page_entries_info @future_auctions
    - replacements = [ ["silent", "future"], ["entries", "auctions"] ]
    - replacements.each {|replacement| status.gsub!(replacement[0], replacement[1])}
    %h3= status.html_safe
    .empty_collection
      %p.emptyMsg There are no future auctions.
  - else
    - status = page_entries_info @future_auctions
    - replacements = [ ["silent", "future"], ["entries", "auctions"] ]
    - replacements.each {|replacement| status.gsub!(replacement[0], replacement[1])}
    %h3= status.html_safe
    %table{:class => 'table table-simpleBordered', :id => 'futureAuctions'}
      %tbody
        - @future_auctions.each do |auction|
          = render :partial => "running_auction", :locals => { :auction => auction }
    %div{:class => 'index_footer clearfix'}
      = paginate @future_auctions
      .pagination_info
        = (page_entries_info @future_auctions).sub("silent", "future").html_safe
- else
  = simple_nested_form_for @user, :html => { :multipart => false } do |f|
    = f.input :region, :label => 'Your Region', :collection => [["Region:",""],["AUS","au"], ["IND","id"]], :selected => @user.region, :onchange => 'alert(@user);'
    = submit_tag "Update Your Region and Refresh the Page", :name => "refresh", :id => 'submit_continue', :class => 'btn btn-primary form_action_btn', :disable_with => "Updating region and refreshing the page..."
