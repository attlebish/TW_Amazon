%h1{:style => 'margin-bottom:20px;'} Create New Auction

= simple_form_for @silent_auction, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title, :label => 'Title'
  = f.input :description, :as => :text, :label => 'Description', :input_html => { :rows => 10 }

  .form-actions
    = link_to 'Cancel', silent_auctions_path, :class => 'btn'
    = f.submit 'Create', :class => 'btn btn-primary'
