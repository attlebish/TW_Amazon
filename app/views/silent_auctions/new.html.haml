- flash.each do |name, msg|
  %div{:class => "alert alert-#{ name == :success ? 'success' : 'error' }"}
    %a.close{"data-dismiss" => "alert"} x
    = msg

%h1{:style => 'margin-bottom:20px;'} Create New Auction

= simple_form_for @silent_auction, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title, :label => 'Title'
  = f.input :description, :as => :text, :label => 'Description', :input_html => { :rows => 10 }

  .form-actions
    = submit_tag "Save and create another auction", :name => "continue", :id => 'submit_continue', :class => 'btn btn-primary'
    = submit_tag "Create auction and go back to listing", :name => "done", :id => 'submit_done', :class => 'btn btn-primary'
