- flash.each do |name, msg|
  %div{:class => "alert alert-#{ name == :success ? 'success' : 'error' }"}
    %a.close{"data-dismiss" => "alert"} x
    = msg

%h1{:style => 'margin-bottom:20px;'}
  %span{:style => 'display:inline-block; margin-right:20px'} Silent Auctions Listing
  = link_to 'Create NEW Auction', new_silent_auction_path, :class => 'btn btn-primary'

%h3{:style => 'margin-bottom:10px;'} RUNNING AUCTIONS
- if @running_auctions.empty?
  .empty_collection
    %em There are no running auctions
- else
  %table{:class => 'table table-striped'}
    %tbody
      - @running_auctions.each do |auction|
        %tr
          %td
            %p{:style => 'font-weight:bold; font-size:1.2em'}= auction.title
            %p= auction.description

%h3{:style => 'margin-bottom:10px;'} CLOSED AUCTIONS
- if @closed_auctions.empty?
  .empty_collection
    %em There are no closed auctions
- else
  %table{:class => 'table table-striped'}
    %tbody
      - @closed_auctions.each do |auction|
        %tr
          %td
            %p{:style => 'font-weight:bold; font-size:1.2em'}= auction.title
            %p= auction.description