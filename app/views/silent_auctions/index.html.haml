%h1
  %span Silent Auctions Listing
  - if current_user.admin?
    = link_to 'Create NEW Auction', new_silent_auction_path, :class => 'btn btn-primary'

%h3 Running Auctions
- if @running_auctions.empty?
  .empty_collection
    %p.emptyMsg There are no running auctions.
- else
  %table{:class => 'table table-simpleBordered', :id => 'runningAuctions'}
    %tbody
      - @running_auctions.each do |auction|
        = render :partial => "running_auction", :locals => { :auction => auction }

%h3 Closed Auctions
- if @closed_auctions.empty?
  .empty_collection
    %p.emptyMsg There are no closed auctions.
- else
  %table{:class => 'table table-simpleBordered', :id => 'closedAuctions'}
    %tbody
      - @closed_auctions.each do |auction|
        = render :partial => "close_auction", :locals => { :auction => auction }

%h3 Expired Auctions
- if @expired_auctions.empty?
  .empty_collection
    %p.emptyMsg There are no expired auctions.
- else
  %table{:class => 'table table-simpleBordered', :id => 'expiredAuctions'}
    %tbody
      - @expired_auctions.each do |auction|
        = render :partial => "expired_auction", :locals => { :auction => auction }

