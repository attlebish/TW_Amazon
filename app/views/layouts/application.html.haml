!!! 5
%html
%head
  %title
    = "TWAmazon | #{@title}"
  = stylesheet_link_tag    "application", :media => "all"
  = javascript_include_tag "application"
  = csrf_meta_tags

%body
  .navbar
    .navbar-inner
      .container
        - if user_signed_in?
          %a(title='TWAmazon Home'){:href => "/", :class => 'brand'} TWAmazon
          %ul.nav
            %li.dropdown
              %a{:href => "#", :class => "dropdown-toggle", "data-toggle" => "dropdown"}
                Silent Auctions
                %b.caret
              %ul{:class => "dropdown-menu"}
                %li
                  %a{:href => silent_auctions_path} Silent Auctions Listing
                  - if current_user.admin?
                    %a{:href => new_silent_auction_path} Create New Auction
          %ul{:class => "nav pull-right"}
            %li.dropdown
              %a{:href => "#", :class => "dropdown-toggle", "data-toggle" => "dropdown"}
                %span{:class=>"label label-inverse loginStatus"}
                  %i{:class => "icon-user icon-white"}
                  Logged in as:
                  %span{:style => "color:#FFD406"}
                    = current_user.username
                  - if current_user.admin?
                    %span{:class => "loginStatus"} [ ADMIN ]
                  %b.caret
              %ul{:class => "dropdown-menu"}
                - if test_mode?
                  %li=link_to("Logout", destroy_user_session_path)
                  - if session[:cas_login]
                    %li=link_to("Logout from CAS", destroy_cas_user_session_path)
                - else
                  %li=link_to("Logout", destroy_cas_user_session_path)
        - else
          %a{:class => "brand"} &nbsp;
  .container
    - flash.each do |name, msg|
      %div{:class => "alert alert-#{ name == :success ? 'success' : 'error' }"}
        %a.close{"data-dismiss" => "alert"} x
        = msg
    = yield