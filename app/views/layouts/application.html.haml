!!! 5
%html
%head
  %title
    = "TWAmazon | #{@title}"
  = stylesheet_link_tag    "application", :media => "all"
  = javascript_include_tag "application"
  = csrf_meta_tags

%body
  .navbar
    .navbar-inner
      .container
        - if user_signed_in?
          %a(title='TWAmazon Home'){:href => "/", :class => 'brand'} TWAmazon
          %ul.nav
            %li.dropdown
              %a{:href => "#", :class => "dropdown-toggle", "data-toggle" => "dropdown"}
                Silent Auctions
                %b.caret
              %ul{:class => "dropdown-menu"}
                %li
                  %a{:href => silent_auctions_path} Silent Auctions Listing
                  - if current_user.admin?
                    %a{:href => new_silent_auction_path} Create New Auction
          = render :partial => 'layouts/user_menu'
        - else
          %a{:class => "brand"} &nbsp;
  .container
    - flash.each do |name, msg|
      %div{:class => "alert alert-#{ name == :success || :notice ? 'success' : 'error' }"}
        %a.close{"data-dismiss" => "alert"} x
        = msg
    = yield